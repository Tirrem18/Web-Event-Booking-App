@model ThAmCo.Events.Data.Booking

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Booking</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Guest Name:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Guest.FirstName) @Html.DisplayFor(model => model.Guest.LastName)
        </dd>
        <dt class="col-sm-2">
            Guest Email:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Guest.Email)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Event)
        </dt>
        <dd class="col-sm-10">
            @Model.Event.Title
            <a asp-action="Details" asp-controller="Events" asp-route-id="@Model.Event.EventId">View Event</a>
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.IsAttending)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.IsAttending)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.BookingId">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>

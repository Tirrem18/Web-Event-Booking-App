@model ThAmCo.Events.Models.InitialCreateViewModel

@{
    ViewData["Title"] = "Initial Event Creation";
}

<h1>Initial Event Creation</h1>

<form asp-action="CheckAvailability" method="post">
    <div class="form-group">
        <label asp-for="EventTypeId" class="control-label"></label>
        <select asp-for="EventTypeId" class="form-control" asp-items="ViewBag.EventTypes"></select>
    </div>

    <div class="form-group">
        <label asp-for="BeginDate">Begin Date</label>
        <input asp-for="BeginDate" type="date" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="EndDate">End Date</label>
        <input asp-for="EndDate" type="date" class="form-control" />
    </div>

    <input type="submit" value="Proceed" class="btn btn-primary" />
</form>
@model ThAmCo.Events.Data.Staff

@{
    ViewData["Title"] = "Create";
    var qualifications = ViewBag.Qualifications as IEnumerable<ThAmCo.Events.Data.Qualifications>;
}
}

<h1>Create</h1>

<h4>Staff</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="FirstName" class="control-label"></label>
                <input asp-for="FirstName" class="form-control" />
                <span asp-validation-for="FirstName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="LastName" class="control-label"></label>
                <input asp-for="LastName" class="form-control" />
                <span asp-validation-for="LastName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label>Qualifications</label>
                @foreach (var qualification in ViewBag.Qualifications as SelectList)
                {
                    <div class="checkbox">
                        <label>
                            <input type="checkbox" name="selectedQualifications" value="@qualification.Value" />
                            @qualification.Text
                        </label>
                    </div>
                }
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

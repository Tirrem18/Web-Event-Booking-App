@model ThAmCo.Events.Data.Staff

@{
    ViewData["Title"] = "Edit";
    var qualifications = ViewData["Qualifications"] as SelectList;
    var selectedQualifications = ViewData["SelectedQualifications"] as List<int>;
}

<h1>Edit</h1>

<h4>Staff</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="StaffId" />
            <div class="form-group">
                <label asp-for="FirstName" class="control-label"></label>
                <input asp-for="FirstName" class="form-control" />
                <span asp-validation-for="FirstName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="LastName" class="control-label"></label>
                <input asp-for="LastName" class="form-control" />
                <span asp-validation-for="LastName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label>Qualifications:</label>
                @foreach (var qual in qualifications)
                {
                    <div class="checkbox">
                        <label>
                            <input type="checkbox" name="SelectedQualifications" value="@qual.Value"
                            @(selectedQualifications.Contains(Convert.ToInt32(qual.Value)) ? "checked" : "") /> @qual.Text
                        </label>
                    </div>
                }
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
